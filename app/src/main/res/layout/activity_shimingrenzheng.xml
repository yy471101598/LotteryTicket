<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/title_oneicon_back_md"></include>

    <View
        android:id="@+id/line_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/img_title"
        ></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="姓名"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_13"
                    />


                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_84"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcc"
                    android:textSize="@dimen/sp_13"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="身份证"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_13"
                    />


                <EditText
                    android:id="@+id/et_sfz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_84"
                    android:background="@null"
                    android:hint="请输入身份证号"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcc"
                    android:textSize="@dimen/sp_13"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="银行卡号"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_13"
                    />


                <EditText
                    android:id="@+id/et_bankcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_97"
                    android:background="@null"
                    android:hint="请输入银行卡号"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcc"
                    android:textSize="@dimen/sp_13"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="收款银行"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_13"
                    />


                <EditText
                    android:id="@+id/et_skbank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_97"
                    android:background="@null"
                    android:hint="请输入收款银行名称"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcc"
                    android:textSize="@dimen/sp_13"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="账号"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_13"
                    />


                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_55"
                    android:layout_marginRight="@dimen/dp_85"
                    android:background="@null"
                    android:hint="请输入邮箱或手机号码"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcc"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_215"
                    android:background="@mipmap/line_shu"
                    />

                <RelativeLayout
                    android:id="@+id/rl_code"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    >

                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="获取验证码"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/sp_12"
                        />

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/line_error"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="验证码"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_13"
                    />


                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_84"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcc"
                    android:textSize="@dimen/sp_13"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:id="@+id/rl_change"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_29"
                android:layout_marginBottom="@dimen/dp_24"
                android:background="@drawable/shap_login"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="提交认证"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>