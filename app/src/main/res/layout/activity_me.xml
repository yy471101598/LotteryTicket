<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.lottery.bossex.views.RoundImageView
                    android:id="@+id/img_icon"
                    android:layout_width="@dimen/dp_77"
                    android:layout_height="@dimen/dp_77"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:layout_marginTop="@dimen/dp_67"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_77"
                    android:layout_toRightOf="@id/img_icon"
                    android:text="营养怪兽"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_17"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_toRightOf="@id/img_icon"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额"
                        android:textColor="@color/text80"
                        android:textSize="@dimen/sp_13"
                        />

                    <TextView
                        android:id="@+id/tv_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="1245.23"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/sp_13"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_98"
                    android:layout_marginRight="@dimen/dp_29"
                    android:background="@mipmap/right_back_b"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:id="@+id/rl_recharge"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@drawable/shap_merecharge"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="充值"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_tixian"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@drawable/shap_metixian"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="提现"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_renzheng"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_59"
                android:layout_marginTop="@dimen/dp_29">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:background="@mipmap/shimingrenzheng"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_58"
                    android:text="实名认证"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:id="@+id/rl_orderdetail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_59"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:background="@mipmap/order"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_58"
                    android:text="订单详情"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:id="@+id/rl_frend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_59"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:background="@mipmap/frend"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_58"
                    android:text="邀请好友"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_59"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:background="@mipmap/setting"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_58"
                    android:text="设置"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:id="@+id/rl_help"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_59"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:background="@mipmap/obout"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_58"
                    android:text="帮助"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:id="@+id/rl_obout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_59"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:background="@mipmap/obout"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_58"
                    android:text="关于我们"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                ></View>

            <RelativeLayout
                android:id="@+id/rl_outlogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_59"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="退出登录"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:background="@color/linecolor"
                android:layout_marginBottom="@dimen/dp_47"
                ></View>
        </LinearLayout>
    </ScrollView>
</LinearLayout>