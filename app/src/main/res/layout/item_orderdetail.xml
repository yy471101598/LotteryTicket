<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104"
        android:background="@mipmap/img_orderdetail"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            >

            <RelativeLayout
                android:layout_width="@dimen/dp_163"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_14"
                android:background="@drawable/shap_orderdetails"
                >

                <TextView
                    android:id="@+id/tv_ordercode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="订单编号：84738984765"
                    android:textColor="#ffa8a8a8"
                    android:textSize="@dimen/sp_12"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/li_zhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_3"
                    android:text="中奖金额"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_12"
                    />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_3"
                    android:text="88"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/sp_19"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_29"
                    android:text="元"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_12"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_notzhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_29"
                    android:text="待开奖"
                    android:textColor="@color/tv_order_D"
                    android:textSize="@dimen/sp_12"
                    />

            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/linecolor"
            android:layout_marginTop="@dimen/dp_50"
            ></View>
    </LinearLayout>
</LinearLayout>