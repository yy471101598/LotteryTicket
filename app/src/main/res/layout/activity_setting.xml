<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/title_oneicon_back_md"></include>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor"
        ></View>

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_29"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码管理"
            android:textColor="@color/text66"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginRight="@dimen/dp_29"
        android:background="@color/linecolor"
        ></View>

    <RelativeLayout
        android:id="@+id/language"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_29"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="语言"
            android:textColor="@color/text66"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginRight="@dimen/dp_29"
        android:background="@color/linecolor"
        ></View>

    <RelativeLayout
        android:id="@+id/rl_safety"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_29"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="安全"
            android:textColor="@color/text66"
            android:textSize="@dimen/sp_14"
            />

        <com.lottery.bossex.views.SlipButton
            android:id="@+id/slipbutton"
            android:layout_width="46dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginRight="@dimen/dp_29"
        android:background="@color/linecolor"
        ></View>

    <RelativeLayout
        android:id="@+id/rl_newversion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_29"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检查新版本"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="V1.0.0"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/sp_14"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginRight="@dimen/dp_29"
        android:background="@color/linecolor"
        ></View>

</LinearLayout>